<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model='ir.ui.view' id='res_users_default_journal_tree'>
        <field name='name'>res_users_default_journal.tree</field>
        <field name='model'>res.users.default_journal</field>
        <field name='arch' type='xml'>
            <tree string='default journal' editable="bottom">
				<field name="user_id"/>
				<field name="journal_id" domain="[('type','=','sale')]"/>
				<field name="company_id"/>
            </tree>
        </field>
    </record>
    <record id="action_res_users_default_journal" model="ir.actions.act_window">
    	<field name="name">Users default journal</field>
    	<field name="res_model">res.users.default_journal</field>
    	<field name="view_mode">tree</field>
    </record>
    <menuitem id="res_users_default_journal_menu"  parent="account.menu_finance_configuration" action="action_res_users_default_journal"/>
</odoo>
        